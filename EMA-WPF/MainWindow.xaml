<Window x:Class="EMA_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EMA_WPF"
        mc:Ignorable="d"
        Title="EMA" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Station: "/>
            <TextBox Grid.Column="1" Name="searchTextBox" VerticalContentAlignment="Center"/>
            <Button Grid.Column="2" Name="searchButton" Content="Search" Click="SearchButton_Click" />
        </Grid>
        <ScrollViewer Grid.Row="1" >
            <TextBlock Name="testTextBlock"/>
        </ScrollViewer>
        <StatusBar Grid.Row="2">
            <TextBlock Name="statusTextBlock"/>
        </StatusBar>
    </Grid>
</Window>
